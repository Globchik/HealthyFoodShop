<Window x:Name="BatchEditWindow" x:Class="HealthyFood_Shop.GeneralWindows.EditBatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthyFood_Shop.GeneralWindows"
        mc:Ignorable="d"
          Title="Партія" MaxHeight="200" MaxWidth="800"
       MinHeight="200" MinWidth="800" ResizeMode="CanMinimize" Loaded="BatchEditWindow_Loaded">
    <Grid Background="{DynamicResource MyYellowBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Grid Margin="15 0" Height="100" Grid.Column="2" Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
            <Label FontSize="25" Content="Товар"/>
            <TextBox Grid.Row="1" x:Name="tb_available" Style="{StaticResource tb_default}"
                         Text="123" FontSize="25" Margin="8 0 8 8" Padding="2"/>
        </Grid>
        <Grid  Margin="15 0" Height="100" Grid.Column="1" Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="3" Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
            <CheckBox Style="{DynamicResource chb_default}" x:Name="chb_date" Grid.Column="1"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          Background="{StaticResource MyWhiteBrush}" BorderThickness="0" Checked="chb_date_Checked" Unchecked="chb_date_Unchecked"/>
            <Label FontSize="25" Content="Придатний до"/>
            <DatePicker  Grid.ColumnSpan="3" Grid.Row="1" x:Name="dp_date" FontSize="24"
                        Margin="8 0 8 8" Padding="0" BorderThickness="0" Foreground="{DynamicResource MyWhiteBrush}">
                <DatePicker.Resources>
                    <Style TargetType="DatePickerTextBox">
                        <Setter Property="IsReadOnly" Value="True"/>
                        <Setter Property="Background" Value="{DynamicResource MyBoxGrayBrush}" />
                        <Setter Property="Foreground" Value="{DynamicResource MyWhiteBrush}" />
                        <Setter Property="Text" Value="Вибір дати" />
                        <Setter Property="BorderThickness" Value="0" />
                    </Style>
                </DatePicker.Resources>
            </DatePicker>
        </Grid>
        <Grid Margin="15 0" Height="100" Grid.Column="3" Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
            <Label FontSize="25" Content="В обробці"/>
            <TextBox Grid.Row="1" x:Name="tb_booked" Style="{StaticResource tb_default}"
                         Text="123" FontSize="25" Margin="8 0 8 8" Padding="2"/>
        </Grid>

        <Button x:Name="btn_apply_changes" FontSize="15" Grid.Row="2" Grid.ColumnSpan="5" Content="✔" Margin="8 10" Style="{DynamicResource btn_black_text}" Click="btn_apply_changes_Click"/>
    </Grid>
</Window>
