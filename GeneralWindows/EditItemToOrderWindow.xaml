<Window x:Name="EditITO" x:Class="HealthyFood_Shop.GeneralWindows.EditItemToOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthyFood_Shop.GeneralWindows"
        mc:Ignorable="d"
        Title="Товари в замовленні" MaxHeight="200" MaxWidth="550"
       MinHeight="200" MinWidth="550" ResizeMode="CanMinimize" Loaded="EditITO_Loaded">
    <Grid Background="{DynamicResource MyYellowBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Grid Margin="15 0" Height="100" Grid.Column="2" Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="2" Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
            <Label Grid.ColumnSpan="2" FontSize="25" Content="Кількість"/>
            <TextBox Grid.Row="1" x:Name="tb_amount" Style="{StaticResource tb_default}"
                         Text="0" FontSize="25" Margin="8 0 8 8" Padding="2"/>
            <Label x:Name="l_out_of" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" FontSize="25" Content="/0"/>
        </Grid>
        <Grid  Margin="15 0" Height="100" Grid.Column="1" Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="2" Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
            <Label FontSize="25" Content="Партія"/>
            <ComboBox  Grid.ColumnSpan="2" Grid.Row="1" x:Name="cb_exp_date" FontSize="24"
                        Margin="8" Style="{DynamicResource cb_default}" SelectionChanged="cb_exp_date_SelectionChanged"/>
        </Grid>

        <Button x:Name="btn_apply_changes" FontSize="15" Grid.Row="2" Grid.ColumnSpan="5" Content="✔" Margin="8 10" Style="{DynamicResource btn_black_text}" Click="btn_apply_changes_Click"/>
    </Grid>
</Window>
