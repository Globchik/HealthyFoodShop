<Window x:Name="ItemsEditWindow" x:Class="HealthyFood_Shop.GeneralWindows.EditItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthyFood_Shop.GeneralWindows"
        mc:Ignorable="d"
        Title="Товар" MaxHeight="630" MaxWidth="935"
       MinHeight="630" MinWidth="935" Loaded="ItemsEditWindow_Loaded" ResizeMode="CanMinimize">
    <Grid Background="{DynamicResource MyYellowBrush}" >

        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="370" />
            <RowDefinition/>
            <RowDefinition Height="39" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <Canvas Grid.Row="1" Grid.Column="1" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
                <Label FontSize="25" Content="Назва"/>
                <TextBox Grid.Row="1" x:Name="tb_name" Style="{StaticResource tb_default}"
                         Text="Тест 123" Width="425" FontSize="25" Margin="8 0 8 8" Padding="2"/>
            </Grid>
            <Grid Canvas.Left="0" Canvas.Top="97" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
                <Label FontSize="25" Content="Ціна"/>
                <TextBox Grid.Row="1" x:Name="tb_price" Style="{StaticResource tb_default}"
                         Text="Тест 123" Width="200" FontSize="22" Margin="8 0 8 8" Padding="2"/>
            </Grid>
            <Grid Canvas.Left="225" Canvas.Top="97" HorizontalAlignment="Left" VerticalAlignment="Top" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="15" />
                </Grid.ColumnDefinitions>
                <Border Grid.ColumnSpan="2" Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
                <CheckBox Style="{DynamicResource chb_default}" x:Name="chb_discount" Grid.Column="1"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          Background="{StaticResource MyWhiteBrush}" BorderThickness="0" Checked="chb_discount_Checked" Unchecked="chb_discount_Unchecked"/>
                <Label FontSize="25" Content="Знижка, %"/>
                <TextBox Grid.ColumnSpan="2" Grid.Row="1" x:Name="tb_discount" Style="{StaticResource tb_default}"
                         Text="Тест 123" Width="200" FontSize="22" Margin="8 0 8 8" Padding="2"/>
            </Grid>
            <Grid Canvas.Left="450" Canvas.Top="0" HorizontalAlignment="left" VerticalAlignment="Center" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
                <Label FontSize="25" Content="Додадково"/>
                <TextBox Grid.Row="1" x:Name="tb_comment" Style="{StaticResource tb_default}"
                         Text="Тест" Width="438" FontSize="22" Margin="8 0 8 8" Padding="2"
                         TextWrapping="Wrap" Height="130"
                         VerticalContentAlignment="Top" HorizontalContentAlignment="Left"/>
            </Grid>
            <Grid  Canvas.Top="200" HorizontalAlignment="Left" VerticalAlignment="Top" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
                <Label FontSize="25" Content="Кількість в товарі"/>
                <TextBox Grid.Row="1" x:Name="tb_amount_in_item" Style="{StaticResource tb_default}"
                         Text="Тест 123" Width="200" FontSize="22" Margin="8 0 8 8" Padding="2"/>
            </Grid>

            <Grid Canvas.Left="437" Canvas.Top="286" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
                <Label FontSize="25" Content="Категорія"/>
                <ComboBox Style="{DynamicResource cb_default}" x:Name="cb_category"
                          FontFamily="Tahoma" FontSize="22" Height="35" Width="230"
                          Grid.Row="1" Margin="8 0 8 8" SelectionChanged="cb_category_SelectionChanged"/>
            </Grid>

            <Grid Canvas.Left="688" Canvas.Top="286" HorizontalAlignment="Left" VerticalAlignment="Top" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="15" />
                </Grid.ColumnDefinitions>
                <Border Grid.ColumnSpan="2" Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
                <CheckBox Style="{DynamicResource chb_default}" x:Name="chb_sub_category" Grid.Column="1"
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          Background="{StaticResource MyWhiteBrush}" BorderThickness="0" Checked="chb_sub_category_Checked" Unchecked="chb_sub_category_Unchecked"/>
                <Label FontSize="25" Content="Підкатегорія"/>
                <ComboBox Style="{DynamicResource cb_default}" x:Name="cb_subcategory" Grid.ColumnSpan="2"
                          FontFamily="Tahoma" FontSize="22" Height="35" Width="200"
                          Grid.Row="1" Margin="8 0 8 8" />
            </Grid>

            <Grid Canvas.Left="437" Canvas.Top="200" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
                <Label FontSize="25" Content="Країна"/>
                <ComboBox Style="{DynamicResource cb_default}" x:Name="cb_country"
                          FontFamily="Tahoma" FontSize="22" Height="35" Width="451"
                          Grid.Row="1" Margin="8 0 8 8"/>
            </Grid>

            <Grid Canvas.Left="226" Canvas.Top="200" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
                <Label FontSize="25" Content="Одиниця виміру"/>
                <ComboBox Style="{DynamicResource cb_default}" x:Name="cb_measurment_unit"
                          FontFamily="Tahoma" FontSize="22" Height="33" Width="190"
                          Grid.Row="1" Margin="8 0 8 8"/>
            </Grid>

            <Grid Canvas.Top="286" HorizontalAlignment="Left" VerticalAlignment="Top" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.RowSpan="2" Background="{StaticResource MyLessBlack}" />
                <Label FontSize="25" Content="Виробник"/>
                <ComboBox Style="{DynamicResource cb_default}" x:Name="cb_manufacturer"
                          FontFamily="Tahoma" FontSize="22" Height="35" Width="416"
                          Grid.Row="1" Margin="8 0 8 8"/>
            </Grid>
        </Canvas>


        <!-- Датагрід партій товару -->
        <DataGrid x:Name="datagrid_batches" Grid.Row="2" Grid.Column="1" Margin="0 12 0 0" Background="{StaticResource MyWhiteBrush}"
                   AutoGenerateColumns="False" CanUserAddRows="False"
                  CanUserDeleteRows="False" IsSynchronizedWithCurrentItem="False"
                  IsReadOnly="True" SelectionMode="Single" HeadersVisibility="Column"
                      BorderThickness="1" BorderBrush="{StaticResource MyPaleBlackBrush}"
                  Width="Auto" HorizontalAlignment="Left">

            <DataGrid.Resources>
                <ContextMenu x:Key="RowContextMenu" >
                    <MenuItem x:Name="mi_batch_add" Header="Додати..." Click="mi_batch_add_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/plus_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="mi_batch_edit" Header="Редагувати..." Click="mi_batch_edit_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/edit_icon.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="mi_batch_delete" Header="Видалити" Click="mi_batch_delete_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/delete_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.Resources>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Додати..." Click="mi_batch_add_Click">
                        <MenuItem.Icon>
                            <Image Source="/Images/plus_icon.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{StaticResource MyWhiteBrush}" />
                    <Setter Property="Foreground" Value="{StaticResource MyBlackBrush}" />
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="FontFamily" Value="Global Serif" />
                    <Setter Property="ContextMenu" Value="{StaticResource RowContextMenu}"/>
                    <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Gray" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Gray" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#FFE6E3E2" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Gray" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="#FFE6E3E2" />
                    </Style.Resources>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{StaticResource MyBlackBrush}" />
                    <Setter Property="Foreground" Value="{StaticResource MyWhiteBrush}" />
                    <Setter Property="FontSize" Value="25" />
                    <Setter Property="FontFamily" Value="Global Serif" />
                    <Setter Property="Padding" Value="10" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="BorderBrush" Value="{StaticResource MyPaleBlackBrush}" />
                    <Setter Property="BorderThickness" Value="0 0 1 1" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" Value="{StaticResource MySlightBlackBrush}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Придатні до" Binding="{Binding ExpiryDate}"
                                        MinWidth="200" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="0">
                                    <Setter Property="Background" Value="{StaticResource MyLightGreyBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                            <Setter Property="TextBlock.TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Кількість" Binding="{Binding Amount}"
                                        MinWidth="160">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="0">
                                    <Setter Property="Background" Value="{StaticResource MyLightGreyBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                            <Setter Property="TextBlock.TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Обробляються" Binding="{Binding Booked}"
                                        MinWidth="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="0">
                                    <Setter Property="Background" Value="{StaticResource MyLightGreyBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                            <Setter Property="TextBlock.TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>


        <Button x:Name="btn_apply" Grid.Row="3" Grid.Column="1"
                Style="{StaticResource btn_black_text}"
                Content="✔" Margin="0 5" Click="btn_apply_Click"/>
    </Grid>
</Window>
