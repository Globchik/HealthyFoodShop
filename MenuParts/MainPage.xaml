<UserControl x:Class="HealthyFood_Shop.MenuParts.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthyFood_Shop.MenuParts"
             mc:Ignorable="d" 
             d:DesignHeight="870" d:DesignWidth="1660" Loaded="UserControl_Loaded">
    <Grid Background="{DynamicResource MyYellowBrush}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition/>
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition/>
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <Border Padding="20 20 20 30" BorderThickness="8" VerticalAlignment="Center"
            Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" >
            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#00000000" Offset="0.2"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#00000000" Offset="0.8"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <StackPanel >
                <Label Foreground="{StaticResource MyBlackBrush}" HorizontalAlignment="Center" Content="👤" FontSize="100"/>
                <Label x:Name="l_user_login" Foreground="{StaticResource MyBlackBrush}" HorizontalAlignment="Center"
                       Content="login" FontSize="40"/>
                <Label x:Name="l_user_PIB" Foreground="{StaticResource MyBlackBrush}"
                       Content="Петренко Петро Петрович" FontSize="65" Margin="0 10 0 -10"/>
                <Label x:Name="l_user_position" Foreground="{StaticResource MyBlackBrush}"
                       HorizontalAlignment="Center" Content="Менеджер" FontSize="40" Margin="0 0 0 10"/>
                <Grid HorizontalAlignment="Center" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Foreground="{StaticResource MyBlackBrush}" Content="🕿" FontSize="50" 
                       VerticalAlignment="Center"/>
                    <Label  x:Name="l_user_phone" Grid.Column="2" Foreground="{StaticResource MyBlackBrush}" 
                       VerticalAlignment="Center" Content="+123455" FontWeight="Bold" FontSize="35"/>
                </Grid>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
